{
  "name": "@4th/stylelint-config",
  "description": "4th motions's stylelint config.",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marco Koenen <mako@4thmotion.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/4th-motion/stylelint-config",
    "type": "git"
  },
  "bin": {
    "4th-stylelint": "./stylelint.sh",
    "4th-stylelint-init": "./init.js"
  },
  "scripts": {
    "fresh": "rm -rf node_modules; yarn install",
    "lint": "4th-eslint . --color --fix"
  },
  "dependencies": {
    "arg": ">= 2",
    "chalk": ">= 2.4",
    "stylelint": ">= 13",
    "stylelint-config-recommended": ">=3.0.0",
    "stylelint-config-prettier": ">= 8",
    "stylelint-order": ">= 4",
    "stylelint-scss": ">= 3"
  },
  "devDependencies": {
    "@4th/eslint-config": "4th-motion/eslint-config"
  },
  "engines": {
    "node": ">= 6"
  },
  "eslintConfig": {
    "extends": [
      "@4th/eslint-config"
    ]
  }
}
